<h1>New Restaurant</h1>
    <div style="text-align:right">
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="cuisine">Cuisine</label>
          {{input value=cuisine id="cuisine"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <div class="address-group">
          <h3 style="text-align:left">Address</h3>
          <div class="form-group">
            <label for="street">Street</label>
            {{input value=street id="street"}}
          </div>

          <div class="form-group">
            <label for="city">City</label>
            {{input value=city id="city"}}
          </div>

          <div class="form-group">
            <label for="state">State</label>
            {{input value=state id="state"}}
          </div>

          <div class="form-group">
            <label for="zip">Zip Code</label>
            {{input value=zip id="zip"}}
          </div>
        </div>

        <button {{action 'saveRestaurant'}} class="btn btn-success">Save</button>
      </form>
    </div>
