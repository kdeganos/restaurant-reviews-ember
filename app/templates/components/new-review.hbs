{{#if addNewReview}}
  <form class="form-new-review">
    <h2 class="form-new-review-heading">New Review</h2>
    <label for="author">Your Name</label>
    {{input value=author id="author" class="form-control"}}
    <label for="body">Your Review</label>
    {{textarea value=body id="body" rows="4" class="form-control"}}
    <label for="rating">Rating</label>
    {{#x-select value=rating}}
      {{#x-option value=5}}5{{/x-option}}
      {{#x-option value=4}}4{{/x-option}}
      {{#x-option value=3}}3{{/x-option}}
      {{#x-option value=2}}2{{/x-option}}
      {{#x-option value=1}}1{{/x-option}}
    {{/x-select}}
    <button class="btn btn-primary"  {{action 'saveReview'}}>Save</button>
  </form>
{{else}}
  <button class="btn btn-info" {{action "reviewFormShow"}}>Add a Review</button>
{{/if}}
