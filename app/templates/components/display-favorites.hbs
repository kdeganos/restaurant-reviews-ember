<div class="restaurantTile" style="width:100%">
  <h1>Favorites</h1>
<hr style="color:#333;border-top:1px #999 solid">
  <div style="padding-left:30px">
{{#each favorites.restaurants as |restaurant|}}
  {{#link-to 'restaurant-detail' restaurant.id}}<p style="font-size:20px; display:inline">&bull; {{restaurant.name}} - {{restaurant.city}}</p>{{/link-to}}<span title="Remove from Favorites" style="color:red; cursor:pointer; margin-left:15px" {{action 'removeFavorite' restaurant}}>X</span><br>
{{/each}}
  </div>
</div>
